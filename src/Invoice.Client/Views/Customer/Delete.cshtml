@model Invoice.Client.Models.Customer

@{
    ViewData["Title"] = "Cliente";
}

<h1>Deletar Cliente</h1>

<h3>Tem certeza que deseja deletar o cliente <strong> @Html.DisplayFor(model => model.Name)</strong>?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LegalNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LegalNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
@model Invoice.Client.Models.InvoiceViewModel

@{
    ViewData["Title"] = "Fatura";
}

<h1>Deletar Fatura</h1>

<h3>Tem certeza que deseja deletar a Fatura <strong> @Html.DisplayFor(model => model.Number)</strong>?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Number)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FindId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
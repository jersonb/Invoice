@model Invoice.Client.Models.Product
@{
        var random = new Random();
    var id = random.Next().ToString();
}
<div id="@id">
    <div class="row">
        <div class="form-group col-md-4 col-lg-4 col-xl-4">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control " />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 col-lg-4 col-xl-4">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" type="number" min="0" class="form-control " />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4 col-lg-4 col-xl-4">
            <label asp-for="Value" class="control-label"></label>
            <input asp-for="Value" class="form-control money" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-lg-12 col-xl-12">
            <input type="button" onclick=@($"$('#{id}').remove()") value="❌" class="btn btn-outline-danger" />
        </div>
    </div>
    <hr />
</div>
